{
  "name": "vscode-qlite",
  "version": "1.3.9",
  "publisher": "Vi-brance",
  "engines": {
    "vscode": "^1.74.0"
  },
  "license": "GPL-3.0",
  "displayName": "VSCode-QLite",
  "description": "An extension that allows you to use QQ in vscode",
  "categories": [
    "Other"
  ],
  "keywords": [
    "qq",
    "oicq",
    "chat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qlite.login",
        "icon": "$(sign-in)",
        "title": "登录"
      },
      {
        "command": "qlite.setting",
        "icon": "$(settings-gear)",
        "title": "设置"
      },
      {
        "command": "qlite.search",
        "icon": "$(search)",
        "title": "搜索"
      },
      {
        "command": "qlite.removeContact",
        "icon": "$(close)",
        "title": "删除消息"
      },
      {
        "command": "qlite.profile",
        "title": "查看资料"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qlite",
          "title": "QLITE",
          "icon": "ico.ico"
        }
      ]
    },
    "views": {
      "qlite": [
        {
          "id": "loginView",
          "name": "LOGIN",
          "type": "webview",
          "when": "!qlite.isOnline"
        },
        {
          "id": "contactView",
          "name": "CONTACT",
          "type": "tree",
          "when": "qlite.isOnline"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "qlite.setting",
          "when": "view == contactView && qlite.isOnline",
          "group": "navigation@1"
        },
        {
          "command": "qlite.search",
          "when": "view == contactView && qlite.isOnline",
          "group": "navigation@0"
        }
      ],
      "view/item/context": [
        {
          "command": "qlite.removeContact",
          "group": "inline",
          "when": "viewItem =~ /contact/"
        },
        {
          "command": "qlite.profile",
          "when": "viewItem =~ /info/"
        }
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Vi-brance/vscode-qlite.git"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "icqq": "^0.2.0"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "esbuild": "~0.16.17",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "set NODE_ENV=production && ts-node ./esbuild.ts",
    "compile": "ts-node ./esbuild.ts",
    "watch": "ts-node ./esbuild.ts --watch",
    "lint": "eslint src --ext ts"
  },
  "icon": "ico.ico"
}
