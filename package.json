{
  "name": "vscode-qlite",
  "version": "1.3.4",
  "publisher": "Vi-brance",
  "engines": {
    "vscode": "^1.74.0"
  },
  "license": "GPL-3.0",
  "displayName": "VSCode-QLite",
  "description": "An extension that allows you to use QQ in vscode",
  "categories": [
    "Other"
  ],
  "keywords": [
    "qq",
    "oicq",
    "chat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qlite.login",
        "icon": "$(sign-in)",
        "title": "登录"
      },
      {
        "command": "qlite.setting",
        "icon": "$(settings-gear)",
        "title": "设置"
      },
      {
        "command": "qlite.search",
        "icon": "$(search)",
        "title": "搜索"
      },
      {
        "command": "qlite.friendProfile",
        "title": "好友资料"
      },
      {
        "command": "qlite.groupProfile",
        "title": "群聊资料"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qlite",
          "title": "QLite",
          "icon": "ico.ico"
        }
      ]
    },
    "views": {
      "qlite": [
        {
          "id": "emptyView",
          "name": "QLite",
          "when": "!qlite.isOnline"
        },
        {
          "id": "qliteExplorer",
          "name": "QLite",
          "when": "qlite.isOnline"
        },
        {
          "id": "profile",
          "name": "资料",
          "when": "qlite.isOnline"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "emptyView",
        "contents": "请登录QLITE。\n[LOGIN](command:qlite.login)",
        "when": "!qlite.isOnline"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "qlite.setting",
          "when": "view == qliteExplorer && qlite.isOnline",
          "group": "navigation@1"
        },
        {
          "command": "qlite.search",
          "when": "view == qliteExplorer && qlite.isOnline",
          "group": "navigation@0"
        }
      ],
      "view/item/context": [
        {
          "command": "qlite.friendProfile",
          "when": "viewItem == FriendInfoTreeItem"
        },
        {
          "command": "qlite.groupProfile",
          "when": "viewItem == GroupInfoTreeItem"
        }
      ]
    }
  },
  "activationEvents": [
    "onView:qliteExplorer"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Vi-brance/vscode-qlite"
  },
  "dependencies": {
    "oicq": "^2.3.1"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "icon": "ico.ico"
}