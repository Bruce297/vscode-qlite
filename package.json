{
  "name": "vscode-qlite",
  "version": "1.4.4",
  "publisher": "Vi-brance",
  "engines": {
    "vscode": "^1.77.0"
  },
  "license": "GPL-3.0",
  "displayName": "VSCode-QLite",
  "description": "在VSCode中使用QQ，让你摸鱼工作两不误",
  "categories": [
    "Other"
  ],
  "keywords": [
    "qq",
    "icqq",
    "chat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qlite.setting",
        "icon": "$(settings-gear)",
        "title": "设置"
      },
      {
        "command": "qlite.search",
        "icon": "$(search)",
        "title": "搜索"
      },
      {
        "command": "qlite.removeMsg",
        "icon": "$(close)",
        "title": "删除消息"
      },
      {
        "command": "qlite.profile",
        "title": "查看资料"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "qlite",
          "title": "QLITE",
          "icon": "ico.ico"
        }
      ]
    },
    "views": {
      "qlite": [
        {
          "id": "loginView",
          "name": "LOGIN",
          "type": "webview",
          "when": "!qlite.isOnline"
        },
        {
          "id": "contactView",
          "name": "CONTACT",
          "type": "tree",
          "when": "qlite.isOnline"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "qlite.setting",
          "when": "view == contactView && qlite.isOnline",
          "group": "navigation@1"
        },
        {
          "command": "qlite.search",
          "when": "view == contactView && qlite.isOnline",
          "group": "navigation@0"
        }
      ],
      "view/item/context": [
        {
          "command": "qlite.removeMsg",
          "group": "inline",
          "when": "viewItem =~ /message/"
        },
        {
          "command": "qlite.profile",
          "when": "viewItem =~ /leaf/"
        }
      ]
    },
    "configuration": [
      {
        "title": "QLite",
        "properties": {
          "qlite.platform": {
            "type": "number",
            "enum": [
              1,
              2,
              3,
              4,
              5,
              6
            ],
            "enumDescriptions": [
              "",
              "功能有限，不建议使用",
              "功能有限，不建议使用",
              "",
              "",
              "默认设备登录失败请选择此项"
            ],
            "enumItemLabels": [
              "Android",
              "aPad",
              "Watch",
              "iMac",
              "iPad",
              "old_Android"
            ],
            "default": 1,
            "description": "登录时使用的设备类型"
          }
        }
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Vi-brance/vscode-qlite.git"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.2.2",
    "icqq": "^0.3.15"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.5",
    "@types/vscode": "^1.78.1",
    "@types/vscode-webview": "^1.57.1",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/codicons": "^0.0.33",
    "@vscode/test-electron": "^2.2.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.39.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5",
    "webpack": "^5.85.1",
    "webpack-cli": "^5.1.3"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile": "webpack",
    "watch": "webpack --watch",
    "lint": "eslint src --ext ts"
  },
  "icon": "ico.ico"
}